// Basic Exercises involving Nats

type Nat {
  zero
  succ(pred: Nat)
}

// Increment
// 2 + 1 = 3
// 0 + 1 = 1
inc(a: Nat): Nat  
  case a {
    zero: Nat.succ(a)
    succ: Nat.succ(a)
  }
//  ?i

// Decrement
// 2 - 1 = 1
// 0 - 1 = 0
dec(a: Nat): Nat
  case a {
    zero: Nat.zero
    succ: a.pred
  }
 // ?d

is_zero(a: Nat): Bool
  case a {
    zero: Bool.true
    succ: Bool.false
  }

 // ?a

