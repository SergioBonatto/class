// Removes all elements that does not match a condition
// List.filter<Nat>(Nat.odd, [1, 2, 3, 4, 5]) = [1, 3, 5]
filter<A: Type>(f: A -> Bool, xs: List<A>): List<A>
  case xs {
    nil: List.nil!
    cons: case f(xs.head) {
            false: filter!(f)(xs.tail)
            true : List.cons!(xs.head, filter!(f)(xs.tail))
           }
  }

